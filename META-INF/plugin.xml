<idea-plugin>
	<id>Scratch</id>
	<name>Scratch</name>
	<version>1.0</version>
	<vendor url="https://github.com/dkandalov/scratch">Dmitry Kandalov, Vojtech Krasa</vendor>
	<idea-version since-build="107.0" until-build="122.9999"/>
	<description>
		<![CDATA[<html><body>
				Quickly opens temporary IntelliJ text editor tab. Data is stored on application level.
				<br/><br/>
				Usage:<br/>
				<ul>
					<li>Alt+C, Alt+C - opens default scratch</li>
					<li>Alt+C, Alt+S - opens list of all scratches</li>
					<li>Alt+C, Alt+A - add new scratch</li>
				</ul>
				</body></html>
		]]>
	</description>
	<change-notes>
		<![CDATA[<html><body>
        <ul>
            <li>1.0 - file types, uses physical files, add/rename/delete scratches</li>
            <li>0.17 - fix for UTF-8</li>
            <li>0.16 - fixed reference to icon</li>
            <li>0.15 - NPE if there are no open projects</li>
        </ul>
        </body></html>
        ]]>
	</change-notes>

	<depends>com.intellij.modules.platform</depends>

	<application-components>
		<component>
			<implementation-class>scratch.ide.ScratchComponent</implementation-class>
		</component>
	</application-components>

	<actions>
		<group id="Scratch.ScratchMenu" text="Scratch" popup="true">
			<add-to-group anchor="last" group-id="ToolsMenu"/>
            <action id="Scratch.OpenDefaultScratch" class="scratch.ide.Actions$OpenDefaultScratchAction" text="Open Scratch"
                    description="Opens default scratch editor" icon="/fileTypes/text.png">
                <keyboard-shortcut keymap="$default" first-keystroke="alt c" second-keystroke="alt c"/>
            </action>
            <action id="Scratch.OpenScratchList" class="scratch.ide.Actions$OpenScratchListAction" text="Open Scratch List"
                    description="Opens list of all scratch editors" icon="/actions/copy.png">
                <keyboard-shortcut keymap="$default" first-keystroke="alt c" second-keystroke="alt s"/>
            </action>
            <separator/>
            <action id="Scratch.NewScratch" class="scratch.ide.Actions$NewScratchAction" text="New Scratch"
                    description="Creates new scratch">
                <keyboard-shortcut keymap="$default" first-keystroke="alt c" second-keystroke="alt a"/>
            </action>
            <action id="Scratch.RenameScratch" class="scratch.ide.Actions$RenameScratchAction" text="Rename Scratch"
                    description="Renames scratch">
            </action>
            <action id="Scratch.DeleteScratch" class="scratch.ide.Actions$DeleteScratchAction" text="Delete Scratch"
                    description="Deletes scratch">
            </action>
		</group>
        <action id="ScratchListenClipboardAction" class="scratch.ide.Actions$ScratchListenToClipboardAction"
				text="Listen To Clipboard" description="Appends clipboard content to default scratch">
		</action>
	</actions>

	<extensions defaultExtensionNs="com.intellij">
		<applicationService serviceInterface="scratch.ide.ScratchOldData"
                            serviceImplementation="scratch.ide.ScratchOldData"/>
		<applicationService serviceInterface="scratch.ide.ScratchConfigPersistence"
                            serviceImplementation="scratch.ide.ScratchConfigPersistence"/>
	</extensions>
</idea-plugin>